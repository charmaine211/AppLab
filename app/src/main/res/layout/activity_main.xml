<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:theme="@style/MyTheme">

    <include layout="@layout/toolbar" />

    <Button
        android:id="@+id/meldingenButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/meldingenLijstButton"
        android:textColor="@color/white"
        android:background="@drawable/button_veilig_thuis_homescreen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/tipsBeherenButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Tips beheren"
        android:textColor="@color/white"
        android:background="@drawable/button_veilig_thuis_homescreen"
        app:layout_constraintTop_toBottomOf="@id/meldingenButton"
        app:layout_constraintStart_toStartOf="@id/meldingenButton"
        app:layout_constraintEnd_toEndOf="@id/meldingenButton"
        app:layout_constraintVertical_bias="0.2"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/tipsInzienButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Tips"
        android:textColor="@color/white"
        android:background="@drawable/button_veilig_thuis_homescreen"
        tools:layout_editor_absoluteX="280dp"
        tools:layout_editor_absoluteY="31dp"
        app:layout_constraintTop_toBottomOf="@id/tipsBeherenButton"
        app:layout_constraintStart_toStartOf="@id/tipsBeherenButton"
        app:layout_constraintEnd_toEndOf="@id/tipsBeherenButton"
        app:layout_constraintVertical_bias="0.2"
        android:layout_marginTop="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>