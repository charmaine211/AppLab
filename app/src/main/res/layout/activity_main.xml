<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/meldingenButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/meldingenLijstButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/tipsBeherenButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tips beheren"
        app:layout_constraintTop_toBottomOf="@id/meldingenButton"
        app:layout_constraintStart_toStartOf="@id/meldingenButton"
        app:layout_constraintEnd_toEndOf="@id/meldingenButton"
        app:layout_constraintVertical_bias="0.2"/>

    <Button
        android:id="@+id/tipsInzienButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tips"
        tools:layout_editor_absoluteX="280dp"
        tools:layout_editor_absoluteY="31dp"
        app:layout_constraintTop_toBottomOf="@id/tipsBeherenButton"
        app:layout_constraintStart_toStartOf="@id/tipsBeherenButton"
        app:layout_constraintEnd_toEndOf="@id/tipsBeherenButton"
        app:layout_constraintVertical_bias="0.2"/>

</androidx.constraintlayout.widget.ConstraintLayout>