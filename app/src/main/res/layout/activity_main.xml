<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity"
    android:theme="@style/MyTheme">

    <include
        android:id="@+id/include"
        layout="@layout/toolbar" />

    <Button
        android:id="@+id/maakMeldingButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="228dp"
        android:background="@drawable/button_veilig_thuis_homescreen"
        android:text="@string/maakMeldingButton"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include" />

    <Button
        android:id="@+id/meldingenButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_veilig_thuis_homescreen"
        android:text="@string/meldingenLijstButton"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/maakMeldingButton"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="@+id/maakMeldingButton"
        app:layout_constraintTop_toBottomOf="@+id/maakMeldingButton" />

    <Button
        android:id="@+id/tipsBeherenButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_veilig_thuis_homescreen"
        android:text="Tips beheren"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@id/meldingenButton"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/meldingenButton"
        app:layout_constraintTop_toBottomOf="@id/meldingenButton" />

    <Button
        android:id="@+id/tipsInzienButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_veilig_thuis_homescreen"
        android:text="Tips"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/tipsBeherenButton"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/tipsBeherenButton"
        app:layout_constraintTop_toBottomOf="@id/tipsBeherenButton"
        app:layout_constraintVertical_bias="0.026" />

</androidx.constraintlayout.widget.ConstraintLayout>